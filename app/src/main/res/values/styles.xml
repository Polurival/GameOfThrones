<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="activity_base_progress_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <!--character-->
    <style name="character_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_small_8</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="character_row_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing_small_8</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:drawableLeft">@drawable/ic_item_brown_24dp</item>
        <item name="android:drawablePadding">@dimen/spacing_small_8</item>
        <item name="android:textSize">@dimen/font_large_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="character_row_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_large_18</item>
    </style>

    <style name="character_row_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:paddingLeft">@dimen/spacing_small_8</item>
        <item name="android:paddingRight">@dimen/spacing_small_8</item>
    </style>

</resources>
